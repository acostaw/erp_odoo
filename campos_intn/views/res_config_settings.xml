<odoo>
    <data>
        <record model="ir.ui.view" id="producto_descuento_res_config_settings">
            <field name="name">Producto Descuento</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='sale_management']" position="inside">
                    <h2>Producto de Descuento</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Producto de Descuento</span>
                                <div class="text-muted">
                                    Producto usado para el descuento otorgado en una resolucion
                                </div>
                                <div class="text-muted">
                                    <field name="producto_descuento"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Producto de Viático</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Producto de Viático</span>
                                <div class="text-muted">
                                    Producto usado para el recargo por costo de traslado y viáticos
                                </div>
                                <div class="text-muted">
                                    <field name="producto_viatico"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Producto Gastos Administrativos de Envío</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Producto Gastos Administrativos de Envío</span>
                                <div class="text-muted">
                                    Producto usado para el recargo por gastos administrativos de envío
                                </div>
                                <div class="text-muted">
                                    <field name="producto_gastos_envio"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>