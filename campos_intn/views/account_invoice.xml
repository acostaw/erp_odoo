<odoo>
    <data>
        <record model="ir.ui.view" id="intn_observacion_factura">
            <field name="name">
                Modificacion de campo Observacion
            </field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='comment']" position="replace">
                    <field name="comment" placeholder="Observaciones..."/>
                </xpath>
            </field>
        </record>
    </data>

</odoo>

