<odoo>
    <data>
        <record model="ir.ui.view" id="version_metrologia_res_config_settings">
            <field name="name">Version Metrologia</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='sale_management']" position="inside">
                    <h2>Version Expediente Metrologia</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Version Expediente Metrologia</span>
                                <div class="text-muted">
                                    Numero de version utilizado al pie de los expedientes de metrologia
                                </div>
                                <div class="text-muted">
                                    <field name="version_metrologia"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>